{
  "name": "orientation-route-maker",
  "version": "1.0.0",
  "description": "A TypeScript-based orientation route maker with Google Maps integration",
  "main": "dist/app.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch",
    "dev": "concurrently \"webpack --watch\" \"live-server --port=3000 --open=Orientation Route Maker.html\"",
    "dev:build": "tsc && live-server --port=3000 --open=index.html",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/google.maps": "^3.54.0",
    "@types/node": "^24.8.1",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "orientation",
    "route",
    "maps",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mgrs": "^2.1.0"
  }
}
